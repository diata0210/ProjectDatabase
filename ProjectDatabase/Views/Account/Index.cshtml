@model ProjectDatabase.Models.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-2xl font-bold text-center"></h1>

<div class="my-4">
    <form class="border border-gray-300 p-4 rounded">
        <div class="my-4">
            <dl class="grid grid-cols-2 gap-4">
                <div>
                    <dt class="font-bold">Name:</dt>
                    <dd>@Html.DisplayFor(model => model.username)</dd>
                </div>
                <div>
                    <dt class="font-bold">Membership:</dt>
                    <dd>@Html.DisplayFor(model => model.password)</dd>
                </div>
                <div>
                    <dt class="font-bold">phone:</dt>
                    <dd>@Html.DisplayFor(model => model.phone)</dd>
                </div>
            </dl>
        </div>
    </form>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>
