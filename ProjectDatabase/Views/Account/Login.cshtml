@model User
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "container mx-auto py-8 md:w-2/3 sm:w-4/5 w-5/6 bg-white text-black" }))
{
    <h2 class="text-2xl font-bold mb-4 text-center">Login</h2>
    <div class="mb-4">
        <div class="flex items-center mb-1">
            <label for="username" class="block mr-2">UserName:</label>
            @Html.TextBoxFor(m => m.username, new { @class = "w-full border border-gray-300 rounded-md py-2 px-3", @placeholder = "Enter your name" })
        </div>
    </div>
    
    <div class="mb-4">
        <div class="flex items-center mb-1">
            <label for="password" class="block mr-2">Password:</label>
            @Html.TextBoxFor(m => m.password, new { @class = "w-full border border-gray-300 rounded-md py-2 px-3", @placeholder = "Enter your password", @type = "password" })
        </div>
    </div>
    @if (ViewBag.LoginStatus == 0)
    {
        <p class="text-red-500">Invalid username or password.</p>
    }
    @if (ViewBag.LoginStatus == -1)
    {
        <p class="text-red-500">Enter your username and password.</p>
    }
    @if(ViewBag.LoginStatus == 2)
    {
        <p class="text-red-500">Enter your username.</p>

    }
    @if (ViewBag.LoginStatus == -3)
    {
        <p class="text-red-500">Enter your password.</p>

    }
    <div class="flex justify-between py-2">
        <button type="button" class="py-2 px-4 rounded text-white bg-yellow-500 hover:bg-yellow-600">
            Cancel
        </button>
        <a href="#" class="underline text-black-50 hover:pointer">
            Forgot password
        </a>
    </div>
    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 flex rounded m-auto mt-6">
        Login
    </button>
}
