@model ProjectDatabase.Models.Store

@{
    ViewData["Title"] = "Revenue";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-2xl font-bold text-center">Store of Details</h1>

<div class="my-4">
    <form class="border border-gray-300 p-4 rounded">
        <div class="my-4">
            <dl class="grid grid-cols-2 gap-4">
                <div>
                    <dt class="font-bold">Name:</dt>
                    <dd>@Html.DisplayFor(model => model.name)</dd>
                </div>
                <div>
                    <dt class="font-bold">Description:</dt>
                    <dd>@Html.DisplayFor(model => model.description)</dd>
                </div>
                <div>
                    <dt class="font-bold">Province:</dt>
                    <dd>@Html.DisplayFor(model => model.Province!.name)</dd>
                </div>
                <div>
                    <dt class="font-bold">District:</dt>
                    <dd>@Html.DisplayFor(model => model.District!.name)</dd>
                </div>
                <div>
                    <dt class="font-bold">Address:</dt>
                    <dd>@Html.DisplayFor(model => model.address)</dd>
                </div>
            </dl>
        </div>

        <div class="my-4">
            <a href="@Url.Action("Edit", new { id = Model?.id })" class="px-4 py-2 bg-blue-500 text-white font-bold rounded hover:bg-blue-600">Edit</a>
            <a href="@Url.Action("Index")" class="px-4 py-2 bg-blue-500 text-white font-bold rounded hover:bg-blue-600">Back to List</a>
        </div>
    </form>
</div>
