@model ProjectDatabase.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="mx-auto w-2/3 my-4 mt-20">
    <div>
        <h1 class="text-center font-bold text-2xl mb-4">Delete Product</h1>

        <form asp-action="Delete" class="border border-gray-300 p-4 rounded">
            <h3 class="text-center mb-4">Are you sure you want to delete this?</h3>

            <div class="grid grid-cols-2 gap-4">
                <div class="col-span-1">
                    <label class="font-bold">Name:</label>
                </div>
                <div class="col-span-1">
                    <span>@Model.name</span>
                </div>
                <div class="col-span-1">
                    <label class="font-bold">Price:</label>
                </div>
                <div class="col-span-1">
                    <span>@Model.price</span>
                </div>
                <div class="col-span-1">
                    <label class="font-bold">Description:</label>
                </div>
                <div class="col-span-1">
                    <span>@Model.description</span>
                </div>
                <div class="col-span-1">
                    <label class="font-bold">Product type:</label>
                </div>
                <div class="col-span-1">
                    <span>@Model.Product_type!.name</span>
                </div>
                <div class="col-span-1">
                    <label class="font-bold">Delete At:</label>
                </div>
                <div class="col-span-1">
                    <span>@Model.delete_at</span>
                </div>
            </div>

            <div class="flex justify-between mt-4">
                <input id="Delete" type="submit" value="Delete" class="px-4 py-2 bg-red-500 text-white font-bold rounded hover:bg-red-600" />
                <a asp-action="Index" class="px-4 py-2 bg-gray-500 text-white font-bold rounded hover:bg-gray-600">Cancel</a>
            </div>
        </form>
    </div>
</div>
