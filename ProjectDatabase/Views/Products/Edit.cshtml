@model ProjectDatabase.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-2xl font-bold text-center">Edit Product</h1>

<div class="flex justify-center">
    <div class="w-2/3">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-4">
                <label asp-for="name" class="block mb-1 font-bold">Name</label>
                <input asp-for="name" class="w-full p-2 border border-gray-300 pl-3 rounded" required />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="price" class="block mb-1 font-bold">Price</label>
                <input asp-for="price" class="w-full p-2 border border-gray-300 pl-3 rounded" required />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="description" class="block mb-1 font-bold">Description</label>
                <input asp-for="description" class="w-full p-2 border border-gray-300 pl-3 rounded" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="type" class="block mb-1 font-bold">Product type</label>
                <select asp-for="type" class="w-full p-3 border border-gray-300 rounded" asp-items="ViewBag.type"></select>
            </div>
            <div class="mb-4">
                <label asp-for="delete_at" class="block mb-1 font-bold">Delete At</label>
                <input asp-for="delete_at" class="w-full p-2 border border-gray-300 pl-3 rounded" />
                <span asp-validation-for="delete_at" class="text-danger"></span>
            </div>
            <div class="flex justify-center">
                <button type="submit" value="Save" class="w-full px-4 py-2 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600">Edit</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="text-blue-500 hover:text-blue-600 underline">Back to List</a>
</div>
