@model ProjectDatabase.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    // Lấy dữ liệu từ ViewData
    var users = ViewData["Users"] as List<string>;
    var phones = ViewData["Phones"] as List<string>;
}

<h1 class="text-2xl font-bold text-center">Create Store</h1>

<div class="flex justify-center">
    <div class="w-2/3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-4">
                <label asp-for="username" class="block mb-1 font-bold">UserName</label>
                <input asp-for="username" class="w-full p-2 border border-gray-300 pl-3 rounded" required />
                <span id="usernameError" class="text-danger"></span>

            </div>
            <div class="mb-4">
                <label asp-for="password" class="block mb-1 font-bold">Password</label>
                <input asp-for="password"class="w-full p-2 border border-gray-300 pl-3 rounded" required />
                <span id="passwordError" class="text-danger"></span>

            </div>

            <div class="mb-4">
                <label asp-for="name" class="block mb-1 font-bold">Name</label>
                <input asp-for="name" class="w-full p-2 border border-gray-300 pl-3 rounded" required />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="phone" class="block mb-1 font-bold">Phone</label>
                <input asp-for="phone" class="w-full p-2 border border-gray-300 pl-3 rounded" required />
                <span id="phoneError" class="text-danger"></span>

            </div>
            <div class="mb-4">
                <label asp-for="role_id" class="block mb-1 font-bold">Role</label>
                <select id="roleSelection" asp-for="role_id" class="w-full p-3 border border-gray-300 rounded" asp-items="ViewBag.role_id">
                    <option value="">--Select District--</option>
                </select>
            </div>
            <div class="mb-4">
                <label asp-for="store_id" class="block mb-1 font-bold">Store</label>
                <select id="storeSelection" asp-for="store_id" class="w-full p-3 border border-gray-300 rounded" asp-items="ViewBag.store_id">
                    <option value="">--Select Store--</option>
                </select>
            </div>
            <div class="flex justify-center">
                <button type="submit" value="Create" class="w-full px-4 py-2 bg-blue-500 text-white font-semibold rounded hover:bg-blue-600">Create</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="text-blue-500 hover:text-blue-600 underline">Back to List</a>
</div>
@section Scripts {
    <script src="~/js/validation.js"></script>
}
<script>

    var usernames = @Html.Raw(Json.Serialize(users));
    var phones = @Html.Raw(Json.Serialize(phones));

</script>